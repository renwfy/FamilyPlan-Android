<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rp_public_contentview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"></View>

    <ImageView
        android:id="@+id/iv_playbill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="180dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_common_small"
        android:paddingLeft="@dimen/padding_common"
        android:paddingRight="@dimen/padding_common"
        android:paddingTop="@dimen/padding_common_small">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_larger" />

        <TextView
            android:id="@+id/tv_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_common_small"
            android:layout_marginTop="@dimen/margin_common_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_mid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="营养师评分"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_size_mid" />

            <RatingBar
                android:id="@+id/ratingbar"
                style="@style/reviewRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_common_small"
                android:clickable="false"
                android:numStars="2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="1"></View>

            <TextView
                android:id="@+id/tv_nice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_common"
                android:drawableLeft="@drawable/ic_nice1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/main_color_dark"
                android:textSize="@dimen/font_size_common" />

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_common_lagger"
                android:drawableLeft="@drawable/ic_hot1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/main_color_dark"
                android:textSize="@dimen/font_size_common" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"></View>
</LinearLayout>