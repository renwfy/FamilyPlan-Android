<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"></View>

    <ImageView
        android:id="@+id/iv_playbill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="180dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_common_small"
        android:paddingLeft="@dimen/padding_common"
        android:paddingRight="@dimen/padding_common"
        android:paddingTop="@dimen/padding_common">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_common" />

        <TextView
            android:id="@+id/tv_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_common_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/text_gray_light"
            android:textSize="@dimen/font_size_mid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_common"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_type"
                android:gravity="center_vertical"
                android:text="减肥"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/font_size_mid" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="1"></View>

            <TextView
                android:id="@+id/tv_nice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_common"
                android:drawableLeft="@drawable/ic_nice_s"
                android:gravity="center_vertical"
                android:text="100"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/font_size_mid" />

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_common_lagger"
                android:drawableLeft="@drawable/ic_hot_s"
                android:gravity="center_vertical"
                android:text="200"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/font_size_mid" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"></View>
</LinearLayout>