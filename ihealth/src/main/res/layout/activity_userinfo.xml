<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_avstart"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_common_lagger" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxLength="12"
        android:text="点击修改头像"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/font_size_mid" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/line"></View>

    <LinearLayout
        android:id="@+id/layout_unick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_common">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_common" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLength="12"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_common_lagger"
            android:text=">"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/font_size_common" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/line"></View>

    <LinearLayout
        android:id="@+id/layout_usex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_common">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_common" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLength="12"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_common_lagger"
            android:text=">"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/font_size_common" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/line"></View>

    <LinearLayout
        android:id="@+id/layout_uage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_common">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_common" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLength="12"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_common_lagger"
            android:text=">"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/font_size_common" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/line"></View>

    <LinearLayout
        android:id="@+id/layout_uheight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_common">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身高"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_common" />

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLength="12"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_common_lagger"
            android:text=">"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/font_size_common" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/line"></View>

    <LinearLayout
        android:id="@+id/layout_uweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_common">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_common" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLength="12"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_common_lagger"
            android:text=">"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/font_size_common" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/line"></View>

    <LinearLayout
        android:id="@+id/layout_usign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_common">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="个性签名"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_common" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_common_lagger"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_mid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_common_lagger"
            android:text=">"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/font_size_common" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/line"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:padding="@dimen/padding_common"
        android:text="最真实的信息才能获得最真实的健康体检报告!"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/font_size_mid" />
</LinearLayout>

